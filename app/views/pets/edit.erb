
    <form action="/pets/<%=@pet.id%>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
      <label>Name:</label>
      <br>
      <input type="text" name="pet[name]" value="<%=@pet.name%>" id="pet_name">
      <br>
      <label>Choose an existing owner:</label>
      <br>
      <% Owner.all.each do |owner| %>
        <input type="radio" name="pet[owner_id]" value="<%=owner.id%>" id="<%=owner.id%>" <%='checked' if @pet.owner == owner %>><%=owner.name%>
      <%end%>
      <br>
      <label>or create a new one:</label>
      <br>
      <label>Name:</label>
      <br>
      <input type="text" name="owner[name]" id="owner_name">
      <br>
      <input type="submit" value="Update Pet">
    </form>

